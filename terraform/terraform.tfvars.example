# =============================================================================
# Terraform Variables - Copia este archivo a terraform.tfvars y edita los valores
# =============================================================================

# ID de tu proyecto de GCP
project_id = "tu-proyecto-id"

# Región de GCP (us-central1 tiene mejor tier gratuito)
region = "us-central1"

# Ambiente (dev, staging, prod)
environment = "dev"

# Nombre base del bucket (se le agregará el project_id)
bucket_name = "fognode-audiobooks"

# Schedule para limpieza automática (Cron format)
# Default: Todos los días a las 2 AM
cleanup_schedule = "0 2 * * *"

# Schedule para estadísticas (Cron format)
# Default: Todos los días a las 8 AM
stats_schedule = "0 8 * * *"

